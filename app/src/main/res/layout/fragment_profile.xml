<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Profile"
        android:textColor="@color/text_primary"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/status_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />
    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_user"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="@id/status_bar_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Display Name -->
    <TextView
        android:id="@+id/tv_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chang"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/image_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_displayName"
        android:text="This is Changg, i love cat"
        android:textColor="@color/text_primary"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_italic"
        />

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_edit_profile"
        android:text="Edit"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/text_white"
        android:background="@drawable/bg_button_primary"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/text_secondary"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- Dark Mode Switch -->
    <TextView
        android:id="@+id/tv_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chế độ tối"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tv_setting"
        app:layout_constraintStart_toStartOf="@id/tv_setting"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_dark_mode"
        android:drawablePadding="15dp"
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_dark_mode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tv_dark_mode"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_setting"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_notification"
        android:drawablePadding="15dp"
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_notification"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/error"
        android:fontFamily="@font/roboto_bold"
        android:gravity="left|center_vertical"
        android:drawablePadding="15dp"
        android:background="@drawable/bg_button_disable"
        android:id="@+id/btn_logout"
        android:drawableStart="@drawable/ic_logout"
        android:paddingStart="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
